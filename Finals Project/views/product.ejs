<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-commerce Page</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="styles/home.css">
    <link rel="stylesheet" href="styles/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="pt-5">

    <!-- Navbar -->
    <header class="d-flex justify-content-between align-items-center fixed-top margin_below ">
        <div class="logo d-flex align-items-center">
            <img class="logo-nav" src="media/images/login_logo.png" alt="Logo">
            <span class="header-text">404</span>
        </div>
        <div class="menu d-flex gap-3 align-items-center">
            <span>STALLS</span>
            <span>ORDERS</span>
            <div class="user-icon">&#128100;</div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container mt-5">
        <div class="row">


            <!-- Products Section -->
            <section class="col-md-9">
                <h5 class="category-heading">Products</h5>
                <div class="row g-4">
                    <% if (products.length> 0) { %>
                        <% products.forEach(product=> { %>
                            <div class="col-md-4 d-flex">
                                <div class="card product-card d-flex flex-column">
                                    <img src="<%= product.image || 'https://via.placeholder.com/300'%>"
                                        class="card-img-top" alt="<%= product.product_name %>">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <%= product.product_name %>
                                        </h6>
                                        <p class="card-text">$<%= product.product_price %>
                                        </p>
                                        <a href="#" class="btn btn_color">Add to Cart</a>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No products available.</p>
                                    <% } %>
                </div>
            </section>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>